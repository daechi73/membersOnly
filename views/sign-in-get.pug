extends layout 

block content 

    h1=title 

    form(method="POST" action="/user/signed-in")
        .form-group
          label(for="username") User Name: 
          input#username.form-control(type="text" placeholder="Your username.." name="username" required=true)
        .form-group
          label(for="password") Password: 
          input#password.form-control(type="password" placeholder="Your password.." name="password" required=true)
        button.btn.btn-primary(type="submit") Submit
    
    p 
      a(href="/user/sign-up") Sign-up
 
    if errors 
      p You have entered a wrong username/password.